{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["eslint:recommended", "dreidev"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "ejs"
  ],
  "rules": {
    "require-jsdoc": 0,
    "no-console": 0,
    "max-len": [2, {
      "code": 150,
      "tabWidth": 2,
      "ignoreUrls": true
    }]
  }
}
